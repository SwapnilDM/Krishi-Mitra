<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top"
    android:background="@drawable/farmer"
    android:fitsSystemWindows="false"
    android:orientation="vertical"
    android:padding="5dp">

    <!-- App name and user profile image -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/userProfile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/circular_background"
            android:src="@drawable/profile_image" />

        <TextView
            android:id="@+id/appName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:text="KRISHI MITRA"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Filter buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="21dp"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- Crops Filter Button -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:background="@drawable/botton_background"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cropFilterButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/transparent"
                android:text="Crops"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </LinearLayout>

        <!-- Location Filter Button -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:background="@drawable/botton_background"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonRefresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/transparent"
                android:text="Refresh"
                android:textColor="@color/white"
                android:textSize="16sp" /> <!-- Reduced margin to bring closer -->

        </LinearLayout>

    </LinearLayout>

    <!-- RecyclerView for displaying crop cards -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cropImageRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:scrollbars="vertical" />

</LinearLayout>
