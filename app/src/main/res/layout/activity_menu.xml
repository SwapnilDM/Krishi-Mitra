<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pngtree"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Row for Home and Profile buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="21dp"
            android:layout_weight="1"
            android:backgroundTint="@color/green"
            android:text="Home"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/nav_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="21dp"
            android:layout_weight="1"
            android:backgroundTint="@color/green"
            android:text="Profile"
            android:textColor="@color/white" />

    </LinearLayout>

    <!-- Contact Us Section (Middle) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/contact_us_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Us"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/contact_us_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="@string/Desc"
            android:textColor="@color/black"
            android:textSize="16sp" />

    </LinearLayout>

    <!-- Spacer to push logout button to bottom -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:text="support@smartgrains.org"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <!-- Logout button at the bottom -->
    <Button
        android:id="@+id/nav_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="50dp"
        android:backgroundTint="@color/bred"
        android:text="Logout"
        android:textColor="@color/white" />
</LinearLayout>
